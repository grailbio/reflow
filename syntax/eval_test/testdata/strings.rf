func floatEq(x, y, epsilon float) bool = if y > x { y - x < epsilon } else { x - y < epsilon }
val TestToFloatZero = strings.ToFloat("0") == 0.0
val TestToFloatZeroDecimal = strings.ToFloat("0.0") == 0.0
